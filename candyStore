candyList = ["snickers", "kit kat", "sour path kids", "juicy fruit", "swedish fish", "skittles", "hershey bar", "skittles", "starbursts", "m&ms"]

allowance = 5

candyCart = []

for candy in candyList:
	print("[" + str(candyList.index(candy)) + "]" + candy)

for x in range(allowance):
	selected = input("Which candy would you like to bring home?")
	candyCart.append(candyList[int(selected)])

answer = "Yes"

while answer == "Yes":

	selected = input ("Which candy would you like to bring home?")

	candyCart.append(candyList[int(selected)])

print("I brought home with me...")
for candy in candyCart:
	print(candy)
